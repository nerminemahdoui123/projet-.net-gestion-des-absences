<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion Scolaire</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Personnalisation de la sidebar */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar a {
                color: white;
                padding: 12px 20px;
                text-decoration: none;
                display: block;
                margin: 5px 0;
                font-weight: normal;
                transition: background-color 0.3s, color 0.3s;
            }

            .sidebar .nav-link {
                font-weight: bold;
            }

                .sidebar .nav-link:hover {
                    background-color: #575757;
                    color: white;
                    font-weight: bold;
                }

            .sidebar .nav-item {
                display: flex;
                align-items: center;
                justify-content: space-between;
                height: 50px;
            }

            .sidebar .deconnecter-btn {
                background-color: white;
                color: black;
                border: 2px solid black;
                padding: 12px 20px;
                font-size: 16px;
                font-weight: bold;
                text-align: center;
                cursor: pointer;
                display: block;
                width: 100%;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar .deconnecter-btn:hover {
                    background-color: #f1f1f1;
                    color: black;
                }

            .sidebar .deconnecter-btn-container {
                margin-top: auto;
                padding: 10px;
            }

            .sidebar ul {
                padding-left: 0;
                list-style: none;
            }

        /* Centrer les cartes */
        .main-content {
            margin-left: 270px;
            padding: 30px;
        }

        /* Style des cartes */
        .card-body {
            display: flex;
            flex-direction: column;
            height: 100%;
            justify-content: space-between;
        }

        /* Agrandir la taille des cartes */
        .card {
            height: 400px; /* Augmenter la hauteur des cartes */
            border: 1px solid #ccc; /* Ajouter une bordure autour des cartes */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.75rem; /* Agrandir la taille du titre */
            margin-bottom: 20px; /* Espacer le titre du contenu de la carte */
        }

        .card-body {
            flex-grow: 1; /* Force l'extension de l'élément pour que toutes les cartes aient la même hauteur */
        }

        .card-text {
            font-size: 1.2rem; /* Agrandir la taille du texte dans la carte */
        }

        .btn {
            font-size: 1.1rem; /* Agrandir la taille du bouton */
        }

        /* Espacement entre les cartes */
        .row .col-md-4 {
            margin-bottom: 40px; /* Augmenter l'espacement entre les cartes */
        }
    </style>

</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-white text-center">Gestion Scolaire</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("CreateUser", "Admin")">Créer un utilisateur</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Etudiant")">Étudiants</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Create", "Enseignant")">Enseignant</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Create", "Classe")">Classes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Matiere")">Matières</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Seance")">Séances</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Grade")">Grade</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Groupe")">Groupes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Departement")">Département</a>
            </li>
        </ul>

        <!-- Le bouton Déconnecter en bas -->
        <div class="deconnecter-btn-container">
            <button class="deconnecter-btn" onclick="location.href='@Url.Action("Logout", "Home")'">Déconnecter</button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container mt-5">
            <h1 class="text-center">Bienvenue Admin dans le système de gestion scolaire!</h1>

            <!-- Exemple de card avec Bootstrap -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Gestion des Étudiants</h5>
                            <p class="card-text">Gérer les informations des étudiants et consulter leurs résultats.</p>
                            <a href="@Url.Action("Index", "Etudiant")" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Gestion des Utilisateurs</h5>
                            <p class="card-text">Gérer des comptes utilisateur (enseignants ou responsables) via l'interface d'administration.</p>
                            <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Gestion des Classes</h5>
                            <p class="card-text">Créer et gérer les différentes classes de l'établissement.</p>
                            <a href="@Url.Action("Create", "Classe")" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
