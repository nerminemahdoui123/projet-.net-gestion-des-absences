@model IEnumerable<tesst.Models.Grade>

@{
    ViewData["Title"] = "Gestion des Grades";
}

<div class="container mt-5">
    <!-- Titre de la page -->
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <!-- Formulaire de création d'un grade -->
    <h3 class="text-center mb-4">Ajouter un Nouveau Grade</h3>
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="NomGrade">Nom du Grade</label>
            <input type="text" class="form-control" id="NomGrade" name="NomGrade" required />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Ajouter Grade</button>
    </form>

    <hr />

    <!-- Liste des Grades -->
    <h3 class="text-center mt-5">Liste des Grades</h3>
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Nom du Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.NomGrade</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Style du titre principal */
    h1, h3 {
        color: #343a40;
        font-weight: bold;
    }

    /* Espacement autour des titres */
    h1 {
        font-size: 2.5rem;
    }

    h3 {
        font-size: 1.8rem;
    }

    /* Style du formulaire */
    .form-group {
        margin-bottom: 20px;
    }

    /* Style des boutons */
    .btn-block {
        width: 100%;
        padding: 12px;
        font-size: 1.2rem;
    }

    /* Style des champs de saisie */
    .form-control {
        border-radius: 0.375rem;
        box-shadow: none;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    /* Amélioration de l'apparence du tableau */
    table {
        width: 100%;
        border-collapse: collapse;
    }

        table th, table td {
            text-align: center;
            padding: 10px;
        }

        table th {
            background-color: #007bff;
            color: #fff;
        }

        table tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }

        table tbody tr:nth-child(even) {
            background-color: #e9ecef;
        }

        table a {
            text-decoration: none;
        }
</style>
